THEOS_DEVICE_IP = 172.20.10.1
ARCHS = armv7 arm64
include theos/makefiles/common.mk

BUNDLE_NAME = NoSafariImages
NoSafariImages_FILES = NoSafariImages.mm
NoSafariImages_INSTALL_PATH = /Library/PreferenceBundles
NoSafariImages_FRAMEWORKS = UIKit
NoSafariImages_PRIVATE_FRAMEWORKS = Preferences

include $(THEOS_MAKE_PATH)/bundle.mk

internal-stage::
	$(ECHO_NOTHING)mkdir -p $(THEOS_STAGING_DIR)/Library/PreferenceLoader/Preferences$(ECHO_END)
	$(ECHO_NOTHING)cp entry.plist $(THEOS_STAGING_DIR)/Library/PreferenceLoader/Preferences/NoSafariImages.plist$(ECHO_END)
